<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
            android:id="@+id/accountNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01234567891"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18" />

        <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
            android:id="@+id/transferTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Shop Payment"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_14" />

        <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="1 Jan 2017, 10:30 AM"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 500000000"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18" />

        <LinearLayout
            android:layout_marginTop="@dimen/margin_4"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_marginRight="@dimen/margin_8"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_clock" />

            <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                android:id="@+id/waitingTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Min"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>