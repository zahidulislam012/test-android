<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context="telvoterminal.telvo.com.terminal.generalscreen.SuccessActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_success"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/inputContainerCardView"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_24"
        android:layout_marginLeft="@dimen/margin_24"
        android:layout_marginRight="@dimen/margin_24"
        android:layout_marginStart="@dimen/margin_24"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/linearLayoutFull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_24"
            android:orientation="vertical"
            android:padding="@dimen/padding_16">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <telvoterminal.telvo.com.terminal.customviews.RobotoBoldTextView
                android:text="@string/success"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_20"
                android:layout_marginTop="@dimen/margin_4"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                    android:id="@+id/titleTextView1"
                    android:text="Title 1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_18"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                    android:id="@+id/valueTextView1"
                    android:text="Value 1"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                    android:id="@+id/titleTextView2"
                    android:text="Title 2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_18"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                    android:id="@+id/valueTextView2"
                    android:text="Value 2"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                    android:id="@+id/titleTextView3"
                    android:text="Title 3"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_18"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                    android:id="@+id/valueTextView3"
                    android:text="Value 3"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                    android:id="@+id/titleTextView4"
                    android:text="Title 4"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_18"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <telvoterminal.telvo.com.terminal.customviews.RobotoRegularTextView
                    android:id="@+id/valueTextView4"
                    android:text="Value 4"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayoutButton"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_48"
        android:layout_marginLeft="@dimen/margin_48"
        android:layout_marginRight="@dimen/margin_48"
        android:layout_marginStart="@dimen/margin_48"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/inputContainerCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputContainerCardView">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_12"
            app:cardUseCompatPadding="true"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="8dp">

            <telvoterminal.telvo.com.terminal.customviews.RobotoRegularButton
                android:id="@+id/doneButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:clickable="true"
                android:drawableRight="@drawable/ic_button_arrow"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="left|center"
                android:paddingLeft="@dimen/padding_16"
                android:paddingRight="@dimen/padding_16"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_18" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>