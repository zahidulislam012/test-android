<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/complain_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:padding="@dimen/padding_10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_complain_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123456789"
            android:padding="2dp"
            android:textColor="#2e2e2e"
            android:textSize="@dimen/text_18" />
        <TextView
            android:id="@+id/text_view_complain_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00 AM, 5 Jan, 2017"
            android:padding="2dp"
            android:textColor="#777777"
            android:textSize="@dimen/text_18" />
    </LinearLayout>
        <TextView
            android:id="@+id/text_view_complain_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#2e2e2e"
            android:layout_gravity="center_vertical"
            android:text="5000.00"
            android:paddingRight="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_10"
            android:textSize="@dimen/text_18" />
    <ImageButton
        android:id="@+id/image_button_cancel_transaction"
        android:src="@android:drawable/ic_delete"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>